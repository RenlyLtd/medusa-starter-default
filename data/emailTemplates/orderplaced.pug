doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      body { font-family: Arial, sans-serif; }
      .container { width: 100%; max-width: 600px; margin: auto; padding: 20px; border: 1px solid #ddd; }
      .header { background-color: #f3f3f3; padding: 10px; text-align: center; }
      .footer { margin-top: 20px; text-align: center; font-size: 12px; color: #777; }
      .content { margin-top: 20px; }
      .order-table { width: 100%; border-collapse: collapse; }
      .order-table th, .order-table td { border: 1px solid #ddd; padding: 8px; text-align: left; }
      th { background-color: #f9f9f9; }
  body
    .container
      .header
        h1 Order Confirmation
      .content
        p Hello #{customerName},
        p Thank you for your order. Here are your order details:
        table.order-table
          thead
            tr
              th Product
              th Quantity
              th Price
          tbody
            each item in orderItems
              tr
                td #{item.productName}
                td #{item.quantity}
                td #{item.price}
        p Total: #{totalPrice}

        p Your order will be shipped to:
        p #{customerAddress}

        p If you have any questions, please contact us at #{supportEmail}.

      .footer
        p Thank you for shopping with us!
